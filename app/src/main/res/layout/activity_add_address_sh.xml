<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".main.activity.AddAddressSHActivity">

    <include layout="@layout/base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="联系人姓名"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/main_text_color"
            android:layout_weight="3"
            android:hint="您的姓名"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_gray_color"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="手机号码"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/main_text_color"
            android:layout_weight="3"
            android:hint="联系人姓名"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_gray_color"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="邮政编号"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_yz_code"
            android:layout_width="0dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/main_text_color"
            android:layout_weight="3"
            android:hint="可以不那么精确"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_gray_color"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="所在地区"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_province_city"
            android:layout_width="0dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/main_text_color"
            android:layout_weight="3"
            android:hint="所在地区"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_gray_color"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="详细地址"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_detail_address"
            android:layout_width="0dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/main_text_color"
            android:layout_weight="3"
            android:hint="请输入详细的地址信息"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_save"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:text="保存"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_height="45dp" />


</LinearLayout>
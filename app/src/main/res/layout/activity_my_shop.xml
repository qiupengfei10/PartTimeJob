<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhitou.job.parttimejob.activity.MyShopActivity">
    <include
        android:id="@+id/title"
        layout="@layout/base_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="100dp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/no_voucher"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/tv_go"
            android:layout_below="@+id/iv"
            android:text="去开店"
            android:background="@drawable/common_item_white_btn"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="45dp" />
    </RelativeLayout>
    <!--我的店铺-->
    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/main_color"
            android:gravity="center_vertical"
            android:layout_height="120dp">
            <!--店铺详情-->
            <ImageView
                android:layout_width="80dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/shop_logo"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="邱鹏飞开的店"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="店铺地址：武汉工程职业技术学院（4栋505）"
                    android:textSize="13sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="发布商品"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品管理"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="订单管理"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >

    <include layout="@layout/base_title"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="76dp">
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:paddingRight="30dp"
                    android:layout_width="0dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_product_title"
                        android:layout_width="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textColor="@color/main_text_color"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_num"
                        android:background="@drawable/shape_kuan"
                        android:textColor="@color/main_color"
                        android:layout_width="wrap_content"
                        android:text="已抢购20件"
                        android:paddingBottom="3dp"
                        android:textSize="10sp"
                        android:paddingTop="3dp"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/tv_baoyou"
                        android:layout_width="wrap_content"
                        android:text="包邮"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="14dp"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="专享价¥"
                            android:textSize="10sp"
                            android:textColor="@color/main_color"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:textColor="@color/main_color"
                            android:textSize="14sp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_go_shop"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/iv_shop_logo"
                    android:layout_width="40dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray_color"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/main_text_color"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:background="@drawable/shape_kuan"
                    android:textColor="@color/main_color"
                    android:layout_width="wrap_content"
                    android:text="进店逛逛"
                    android:paddingBottom="3dp"
                    android:textSize="10sp"
                    android:paddingTop="3dp"
                    android:layout_marginRight="15dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="80dp"
                    android:background="@color/line_gray_color"
                    android:layout_height="0.5dp"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="图文详情"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="80dp"
                    android:background="@color/line_gray_color"
                    android:layout_height="0.5dp" />


            </LinearLayout>


            <ListView
                android:id="@+id/listview"
                android:divider="@null"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="80dp"
                    android:background="@color/line_gray_color"
                    android:layout_height="0.5dp"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="相关推荐"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="80dp"
                    android:background="@color/line_gray_color"
                    android:layout_height="0.5dp" />

            </LinearLayout>

            <cn.yhbh.miaoji.common.view.NoScrollGridView
                android:id="@+id/gridview"
                android:numColumns="2"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </cn.yhbh.miaoji.common.view.NoScrollGridView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:background="@color/line_gray_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_go_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="首页"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:background="@color/line_gray_color"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            tools:ignore="Suspicious0dp" />

        <LinearLayout
            android:id="@+id/ll_go_bus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="购物车"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_go_taobao_detail"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/main_color"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bottom_price"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="专享价"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>
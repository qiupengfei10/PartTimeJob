<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="100dp"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="wrap_content"
                android:text="雀巢咖啡15g1+2原味咖啡"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/main_text_color"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/tv_product_title"
                android:paddingTop="5dp"
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:text="雪碧-雪碧诞生于1961年,1984年正式进入中国。作为柠檬口味碳酸饮料的领导品牌,雪碧畅销于190多个国家,是世界排名第4的碳酸饮料。"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_status"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:text="￥2.6"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:background="@color/text_gray_color"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_edt_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="编辑"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="1dp"
            android:background="@color/text_gray_color"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_down_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="下架"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="1dp"
            android:background="@color/text_gray_color"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_delete_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="删除"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:background="@color/text_gray_color"
        android:layout_width="match_parent"
        android:layout_height="1dp" />





</LinearLayout>